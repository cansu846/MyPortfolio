
@model List<Message>
@{
	ViewData["Title"] = "ListMeesage";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Messages</div>
	</div>
	<div class="card-body">
		<table class="table table-striped mt-3">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Sender</th>
					<th scope="col">Subject</th>
					<th scope="col">Date</th>
					<th scope="col">Detail</th>
					<th scope="col">Status</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.MessageId</td>
						<td>@item.NameSurname</td>
						<td>@item.Subject</td>
						<td>@item.Date</td>
						<td><a href="/Message/DetailMessage/@item.MessageId" class="btn btn-primary" />Detail</td>
						@if(item.IsRead==false)
						{ 
							<td><a href="/Message/ChangeIsReadTrue/@item.MessageId" class="btn btn-warning" /> Unread</td>
						}else{ 
							<td><a href="/Message/ChangeIsReadFalse/@item.MessageId" class="btn btn-success" />Seen</td>
						}
							<td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger" />Delete</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>




