
@model Experience
@{
	ViewData["Title"] = "EditExperience";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container">
	<h4 class="page-title"></h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Add Experience</div>
				</div>
				<div class="card-body">
					<form method="post" action="/Experience/AddExperience">
						<div class="form-group">
							<label for="">Firm Info</label>
							<input type="text" class="form-control" asp-for="Head" placeholder="Enter Header">
						</div>
						<div class="form-group">
							<label for="">Title</label>
							<input type="text" class="form-control" asp-for="Title" placeholder="Title">
						</div>
						<div class="form-group">
							<label for="">Date</label>
							<input type="date" class="form-control" asp-for="Date">
						</div>
						<div class="form-group">
							<label for="">Description</label>
							<textarea class="form-control" asp-for="Description" rows=""></textarea>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Submit</button>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>